@model ICollection<Kategori>

<h4>Kategori Sayafası</h4>

<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kategori Adı</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.KategoriAdi</td>
                <td>@item.KategoriAciklama</td>
            </tr>
        }
    </tbody>
</table>
